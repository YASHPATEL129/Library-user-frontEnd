    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/elegant-icons.css" type="text/css" />
    <link rel="stylesheet" href="/css/magnific-popup.css" type="text/css" />
    <link rel="stylesheet" href="/css/nice-select.css" type="text/css" />
    <link rel="stylesheet" href="/css/owl.carousel.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/slicknav.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/style.css" type="text/css" />
  </head>

  <body>
    <!-- Page Preloder -->
    <div id="preloder">
      <div class="loader"></div>
    </div>

    <!-- Header Section Begin -->
    <%- include('header', { showSearchBar: showSearchBar }) %>
    <!-- Header Section End -->

    <!-- Hero Section Begin -->
    <section class="hero">
      <div class="hero__slider owl-carousel">
        <div class="hero__items set-bg" data-setbg="image/book-2.jpg">
          <div class="container">
            <div class="row">
              <div class="col-xl-5 col-lg-7 col-md-8">
                <div class="hero__text">
                  <h6>Winter Collection</h6>
                  <h2>Collections 2024</h2>
                  <p>
                    Unlock the pages of imagination: Journey through worlds, one
                    story at a time.
                  </p>
                  <a
                    href="/books"
                    class="primary-btn"
                    style="background-color: #03778f"
                    >Read now <span class="arrow_right"></span
                  ></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Hero Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <ul class="filter__controls">
              <li class="active" data-filter="*">Hot New Releases</li>
            </ul>
          </div>
        </div>
        <div class="row product__filter" id="bookList">
          <!-- Start -->
          <% books.forEach(book => { %>
          <div
            class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals"
          >
            <div class="product__item">
              <a href="/bookDetails/<%= book.bookId %>">
                <div
                  class="product__item__pic set-bg"
                  data-setbg="/download/<%= book.cover %>"
                >
                  <% if (book.isPrime) { %>
                  <span class="prime-icon">
                    <img src="/image/crown.png" alt="Prime Icon"
                  /></span>
                  <!-- Add icon for prime books -->
                  <% } %>
                </div>
                <div class="product__item__text">
                  <h6><%= book.title %></h6>
                </div>
              </a>
            </div>
          </div>
          <% }); %>
          <!-- End -->
        </div>
      </div>
    </section>
    <!-- Product Section End -->

